---
import { MITOCWGraphELK } from '../components/MITOCWGraphELK';
import { MITOCWTopics } from '../components/MITOCWTopics';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="MIT OpenCourseWare Course Prerequisite Graph with ELK.js Layout" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>MIT OCW Course Graph | Arbor Scientiae</title>
  </head>
  <body>
    <main>
      <section class="graph-section">
        <div id="mit-graph-container">
          <MITOCWGraphELK client:load />
        </div>
      </section>

      <section class="topics-section">
        <MITOCWTopics client:load />
      </section>
    </main>

    <style>
      :root {
        font-family: system-ui, -apple-system, sans-serif;
        margin: 0;
        padding: 0;
      }

      body {
        margin: 0;
        padding: 0;
        overflow: hidden;
      }

      main {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        height: 100vh;
        overflow: hidden;
      }

      .graph-section {
        flex: 0 0 50%;
        margin: 0;
        padding: 0;
        width: 100%;
        min-height: 0;
        border-bottom: 2px solid #e5e7eb;
      }

      .topics-section {
        flex: 1;
        overflow-y: auto;
        background: #f9fafb;
      }

      #mit-graph-container {
        width: 100%;
        height: 100%;
      }
    </style>
  </body>
</html>
