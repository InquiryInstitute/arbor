      }

      .tree-card iframe {
        width: 100%;
        height: 500px;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        background: #fafafa;
        pointer-events: none; /* Prevent iframe interaction, clicking card goes to page */
      }

      /* Forest-like organic layout on larger screens */
      @media (min-width: 1200px) {
        .forest {
          grid-template-columns: repeat(2, 1fr);
        }
        
        .tree-container:nth-child(1) {
          grid-column: 1;
          grid-row: 1 / 3;
        }
        
        .tree-container:nth-child(2) {
          grid-column: 2;
          grid-row: 1;
        }
        
        .tree-container:nth-child(3) {
          grid-column: 2;
          grid-row: 2;
        }
        
        .tree-container:nth-child(4) {
          grid-column: 1 / 3;
          grid-row: 3;
        }
      }

      @media (max-width: 768px) {
        .forest {
          grid-template-columns: 1fr;
        }
        
        .tree-card iframe {
          height: 400px;
        }
      }
    </style>
